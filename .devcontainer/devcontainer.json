{
    "name": "Python Jupyter Notebook",
    "dockerFile": "Dockerfile",

    // Use 'settings' to set *default* container specific VS Code settings on container create.
    // You can edit these settings after create using File > Preferences > Settings > Remote.
    "settings": { 
        "python.pythonPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.pylintArgs": [
            "--load-plugins",
            "pylint_quotes"
        ]
    },

    // Run 'postCreateCommand' after the container is created.
    "postCreateCommand": "pip install --upgrade pip && pip install jupyterlab undetected-chromedriver selenium beautifulsoup4 requests",

    // Run 'postStartCommand' after the container is started.
    "postStartCommand": "jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root",

    // Run 'installExtensions' to install extensions inside the container.
    "installExtensions": [
        "ms-python.python"
    ]
}
